<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Page Title</title>
    <style>
        /* Define your CSS styles here */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .doctor-form {
            /* Add form-level styles here */
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .doctor-label {
            /* Add label styles here */
            font-size: 16px;
            color: #333;
        }

        .doctor-textbox {
            /* Add textbox styles here */
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 3px;
            font-size: 14px;
        }

        .submit-button {
            /* Add submit button styles here */
            padding: 8px 12px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 3px;
            font-size: 16px;
            cursor: pointer;
        }

            .submit-button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    @using (Html.BeginForm("Index", "Doctor", FormMethod.Get, new { @class = "doctor-form" }))
    {
        <div class="form-group">
            @Html.Label("Enter Doctor ID:", new { @class = "doctor-label" })
            @Html.TextBox("doctorId", null, new { @class = "doctor-textbox" })
        </div>
        <div class="form-group">
            @Html.Label("Enter Password:", new { @class = "doctor-label" })
            @Html.Password("password", null, new { @class = "doctor-textbox" })
        </div>
        <input type="submit" value="Submit" class="submit-button" />
    }
</body>
</html>
