@model ClinicAutimation.Models.prescsavemodel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Poppins', sans-serif;
            background-color: #f9f9f9;
        }

        .form-container {
            width: 50%;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #fff;
            text-align: center;
        }

        h4 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 18px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .btn {
            padding: 10px 20px;
            font-size: 18px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .back-link {
            margin-top: 20px;
            display: inline-block;
            text-decoration: none;
            color: #007bff;
            font-size: 18px;
            transition: color 0.3s ease;
        }

            .back-link:hover {
                color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="form-container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <h4>Prescription Save Model</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.PhysicianPrescriptionDescription, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.PhysicianPrescriptionDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhysicianPrescriptionDescription, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PhysicianPrescriptionScheduleID, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.PhysicianPrescriptionScheduleID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhysicianPrescriptionScheduleID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PhysicianPrescriptionDrugID, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.PhysicianPrescriptionDrugID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhysicianPrescriptionDrugID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn" />
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "back-link" })
        </div>
    </div>
</body>
</html>

